{
  "info": {
    "name": "eClaims API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for eClaims.API endpoints"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:5001",
      "type": "string"
    },
    {
      "key": "id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get All Claims",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/claims",
          "host": ["{{baseUrl}}"],
          "path": ["api","claims"]
        }
      }
    },
    {
      "name": "Get Claim by Id",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/claims/{{id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","claims","{{id}}"]
        }
      }
    },
    {
      "name": "Create Claim",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"policyNumber\": \"POL-123456\",\n  \"status\": \"DRAFT\",\n  \"incident\": {\n    \"date\": \"2025-11-01T00:00:00Z\",\n    \"description\": \"Rear-end collision\",\n    \"location\": \"123 Main St\"\n  },\n  \"workOrders\": [],\n  \"documents\": []\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/claims",
          "host": ["{{baseUrl}}"],
          "path": ["api","claims"]
        }
      }
    },
    {
      "name": "Update Claim",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{id}}\",\n  \"policyNumber\": \"POL-123456-UPDATED\",\n  \"status\": \"SUBMITTED\",\n  \"incident\": {\n    \"date\": \"2025-11-01T00:00:00Z\",\n    \"description\": \"Updated description\",\n    \"location\": \"123 Main St\"\n  },\n  \"workOrders\": [],\n  \"documents\": []\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/claims/{{id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","claims","{{id}}"]
        }
      }
    },
    {
      "name": "Delete Claim",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/claims/{{id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","claims","{{id}}"]
        }
      }
    }
  ]
}
