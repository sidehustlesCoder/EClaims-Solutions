@model eClaims.Core.Entities.Claim

@{
    ViewData["Title"] = "Details";
}

<h1>Claim Details</h1>

<div>
    <h4>Claim #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Policy Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PolicyNumber)
        </dd>
        <dt class = "col-sm-2">
           Incident Date
        </dt>
        <dd class = "col-sm-10">
            @Model.Incident.Date.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
           Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Incident.Description
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="mt-3">
        <form asp-action="Approve" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-success me-2" @(Model.Status == "APPROVED" ? "disabled" : "")>Approve</button>
        </form>

        <form asp-action="Reject" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-warning me-2">Reject</button>
        </form>

        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete this claim?');">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
}
