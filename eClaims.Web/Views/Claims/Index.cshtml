@model IEnumerable<eClaims.Core.Entities.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<h1>My Claims</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Submit New Claim</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Policy Number
            </th>
            <th>
                Status
            </th>
            <th>
                Incident Date
            </th>
            @if (User.IsInRole("Admin"))
            {
                <th>Admin</th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="fw-bold text-dark">
                @Html.DisplayFor(modelItem => item.PolicyNumber)
            </td>
            <td>
                @{
                    var statusClass = item.Status?.ToUpper() switch
                    {
                        "SUBMITTED" => "status-submitted",
                        "APPROVED" => "status-approved",
                        "REJECTED" => "status-rejected",
                        _ => "bg-light text-dark"
                    };
                }
                <span class="badge badge-status @statusClass">
                    @Html.DisplayFor(modelItem => item.Status)
                </span>
            </td>
            <td>
                @item.Incident.Date.ToString("MMM dd, yyyy")
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View Details</a>
                @if (User.IsInRole("Admin"))
                {
                    <div class="btn-group ms-2" role="group">
                        @* Approve *@
                        <form asp-action="Approve" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-success" @(item.Status == "APPROVED" ? "disabled" : "")>Approve</button>
                        </form>

                        @* Reject *@
                        <form asp-action="Reject" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-warning">Reject</button>
                        </form>

                        @* Delete *@
                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Delete this claim?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                }
            </td>
        </tr>
}
    </tbody>
</table>
