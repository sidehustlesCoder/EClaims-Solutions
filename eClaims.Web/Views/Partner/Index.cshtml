@model List<eClaims.Core.Entities.Claim>

@{
    ViewData["Title"] = "Partner Portal";
    var partnerId = ViewBag.PartnerId as string;
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card bg-dark text-white shadow">
            <div class="card-body p-4">
                 <h1 class="h3 mb-1">Partner Portal</h1>
                 <p class="text-white-50 mb-0">Manage your assigned work orders and estimates.</p>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 text-primary fw-bold">Assigned Work Orders</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                   <th class="ps-4">Policy #</th>
                   <th>Status</th>
                   <th>Car / Incident</th>
                   <th>Notes</th>
                   <th class="text-end pe-4">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    var wo = claim.WorkOrders.FirstOrDefault(w => w.ProviderId == partnerId);
                    if (wo != null)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@claim.PolicyNumber</td>
                            <td>
                                @if(wo.Status == "PENDING") { <span class="badge bg-warning text-dark">Pending Estimate</span> }
                                else if(wo.Status == "IN_PROGRESS") { <span class="badge bg-info text-dark">In Progress</span> }
                                else if(wo.Status == "COMPLETED") { <span class="badge bg-success">Completed</span> }
                                else { <span class="badge bg-secondary">@wo.Status</span> }
                            </td>
                            <td>@claim.Incident.Description</td>
                            <td class="text-muted small">@wo.Notes</td>
                            <td class="text-end pe-4">
                                <a asp-action="Manage" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-primary">Manage Order</a>
                            </td>
                        </tr>
                    }
                }
                @if (!Model.Any())
                {
                    <tr><td colspan="5" class="text-center py-4 text-muted">No Work Orders assigned yet.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
