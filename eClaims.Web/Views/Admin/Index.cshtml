@model eClaims.Web.Models.ReportingViewModel

@{
    ViewData["Title"] = "Reports & Analytics";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3">Claims Analytics</h1>
        <p class="text-muted">Real-time insights across the platform</p>
    </div>
    <div class="text-end">
        <button class="btn btn-outline-primary btn-sm" onclick="window.print()">Export Report</button>
    </div>
</div>

<!-- KPI Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stat-card p-3">
            <h6 class="text-muted text-uppercase small">Total Claims</h6>
            <h2 class="text-primary fw-bold">@Model.TotalClaims</h2>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card p-3">
            <h6 class="text-muted text-uppercase small">Pending Review</h6>
            <h2 class="text-warning fw-bold">@Model.PendingReview</h2>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card p-3">
            <h6 class="text-muted text-uppercase small">Approved</h6>
            <h2 class="text-success fw-bold">@Model.Approved</h2>
        </div>
    </div>
    <div class="col-md-3">
         <div class="card stat-card p-3">
            <h6 class="text-muted text-uppercase small">Avg. Processing</h6>
            <h2 class="text-info fw-bold">@Model.AverageProcessingTimeDays <span class="fs-6 text-muted">days</span></h2>
        </div>
    </div>
</div>

<!-- Charts Row 1 -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-white fw-bold">Claims by Location (Geo)</div>
            <div class="card-body">
                <canvas id="geoChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6">
         <div class="card h-100 shadow-sm">
            <div class="card-header bg-white fw-bold">Claims by Status</div>
            <div class="card-body">
                <canvas id="statusChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row 2 -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow-sm">
             <div class="card-header bg-white fw-bold">Claim Ageing Matrix</div>
            <div class="card-body">
                <canvas id="ageingChart" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Geo Chart
    const geoCtx = document.getElementById('geoChart');
    new Chart(geoCtx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.ClaimsByLocation.Keys)),
            datasets: [{
                label: 'Claims count',
                data: @Html.Raw(Json.Serialize(Model.ClaimsByLocation.Values)),
                backgroundColor: '#415a77',
                borderRadius: 4
            }]
        },
        options: { responsive: true }
    });

    // Status Chart
    const statusCtx = document.getElementById('statusChart');
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.ClaimsByStatus.Keys)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(Model.ClaimsByStatus.Values)),
                backgroundColor: ['#e76f51', '#2a9d8f', '#e9c46a', '#415a77'],
                hoverOffset: 4
            }]
        }
    });

    // Ageing Chart
    const ageingCtx = document.getElementById('ageingChart');
    new Chart(ageingCtx, {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.AgeingMatrix.Keys)),
            datasets: [{
                label: 'Claims Ageing',
                data: @Html.Raw(Json.Serialize(Model.AgeingMatrix.Values)),
                borderColor: '#e76f51',
                tension: 0.1,
                fill: true,
                backgroundColor: 'rgba(231, 111, 81, 0.2)'
            }]
        },
        options: { responsive: true }
    });
</script>
